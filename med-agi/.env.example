# Med-AGI Environment Configuration
# Copy this file to .env and update with your values

# OIDC Authentication
OIDC_ISSUER=http://localhost:8080/realms/med-agi
OIDC_AUDIENCE=med-agi-api
OIDC_JWKS_URL=http://localhost:8080/realms/med-agi/protocol/openid-connect/certs

# Authorization
OPA_URL=http://localhost:8181

# SIEM Integration
SIEM_URL=https://siem.example.com/api
SIEM_MODE=dev

# Medical Imaging
DICOMWEB_BASE=https://dicom.example.com/dicomweb
TRITON_URL=http://localhost:8000

# Database
POSTGRES_USER=medagi
POSTGRES_PASSWORD=medagi
POSTGRES_DB=medagi
EVAL_DB_URL=postgresql://medagi:medagi@localhost:5432/medagi

# Elasticsearch
ELASTIC_URL=http://localhost:9200

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MODELCARDS_BUCKET=med-agi-modelcards

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Keycloak (Dev only)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Service URLs (for external access)
IMAGING_URL=http://localhost:8006
EKG_URL=http://localhost:8016
EVAL_URL=http://localhost:8005
ANCHOR_URL=http://localhost:8007
MODELCARDS_URL=http://localhost:8008
OPS_URL=http://localhost:8010